
    
<ContentDialog
    x:Class="CoreTray.Views.WelcomeDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    PrimaryButtonText="Next"
    SecondaryButtonText="Get Started"
    CornerRadius="12"
    CloseButtonText="Skip"
    DefaultButton="Primary"
    PrimaryButtonClick="PrimaryButton_Click"
    SecondaryButtonClick="SecondaryButton_Click">

    <ContentDialog.Resources>
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                           From="20" To="0" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Style TargetType="Button" x:Key="PrimaryBut" BasedOn="{StaticResource AccentButtonStyle}">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="24,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="Button" x:Key="RoundedBut" BasedOn="{StaticResource AccentButtonStyle}">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="24,10"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </ContentDialog.Resources>

    <ContentDialog.PrimaryButtonStyle>
        <StaticResource ResourceKey="PrimaryBut"/>
    </ContentDialog.PrimaryButtonStyle>
    <ContentDialog.SecondaryButtonStyle>
        <StaticResource ResourceKey="PrimaryBut"/>
    </ContentDialog.SecondaryButtonStyle>
    <ContentDialog.CloseButtonStyle>
        <StaticResource ResourceKey="RoundedBut"/>
    </ContentDialog.CloseButtonStyle>

    <Grid MinHeight="450" MaxWidth="550">
        <Grid VerticalAlignment="Top" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8">
                <Ellipse x:Name="Step1Indicator" Width="12" Height="12" Fill="{ThemeResource AccentFillColorDefaultBrush}"/>
                <Ellipse x:Name="Step2Indicator" Width="12" Height="12" Fill="{ThemeResource ControlStrokeColorDefaultBrush}"/>
            </StackPanel>
        </Grid>

        <!-- Step 1 Panel -->
        <Grid x:Name="Step1Panel" Visibility="Visible" Margin="0,40,0,0">
            <Grid.RenderTransform>
                <TranslateTransform/>
            </Grid.RenderTransform>
            
            <StackPanel Spacing="24" Padding="20">
                <StackPanel Spacing="8">
                    <TextBlock 
                        Text="Monitor Your Hardware" 
                        FontSize="28"
                        FontWeight="Bold"
                        TextWrapping="Wrap"
                        HorizontalAlignment="Center"/>
                    <TextBlock 
                        Text="Step 1 of 2" 
                        FontSize="12"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        HorizontalAlignment="Center"/>
                </StackPanel>
                
                <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                        CornerRadius="28"
                        Padding="10"
                        HorizontalAlignment="Center">
                    <Image 
                        Source="/Assets/BadgeLogo.scale-400.png" 
                        Height="160"
                        Width="160"
                        Stretch="Uniform"/>
                </Border>
                
                <StackPanel Spacing="16">
                    <TextBlock 
                        TextWrapping="Wrap"
                        FontSize="15"
                        TextAlignment="Center"
                        LineHeight="24"
                        Foreground="{ThemeResource TextFillColorPrimaryBrush}">
                        CoreTray provides real-time monitoring of your CPU, GPU, and RAM temperature and usage.
                    </TextBlock>
                    
                    <StackPanel Spacing="12" Margin="0,8,0,0">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE950;" FontSize="16" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                            <TextBlock Text="Live performance graphs with real-time updates" 
                                     TextWrapping="Wrap"
                                     VerticalAlignment="Center"
                                     FontSize="14"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE9F9;" FontSize="16" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                            <TextBlock Text="CPU and GPU temperature monitoring" 
                                     TextWrapping="Wrap"
                                     VerticalAlignment="Center"
                                     FontSize="14"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE7F4;" FontSize="16" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                            <TextBlock Text="Memory usage (%)" 
                                     TextWrapping="Wrap"
                                     VerticalAlignment="Center"
                                     FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Step 2 Panel -->
        <Grid x:Name="Step2Panel" Visibility="Collapsed" Margin="0,40,0,0">
            <Grid.RenderTransform>
                <TranslateTransform/>
            </Grid.RenderTransform>
            
            <StackPanel Spacing="24" Padding="20">
                <StackPanel Spacing="8">
                    <TextBlock 
                        Text="Customize Your Experience!" 
                        FontSize="28"
                        FontWeight="Bold"
                        TextWrapping="Wrap"
                        HorizontalAlignment="Center"/>
                    <TextBlock 
                        Text="Step 2 of 2" 
                        FontSize="12"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        HorizontalAlignment="Center"/>
                </StackPanel>
                
                <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                        CornerRadius="12"
                        Padding="0"
                        HorizontalAlignment="Center">
                    <Image
                        
                        Source="/Assets/Dialog2.png" 
                        Height="160"
                        Width="360"
                        
                        Stretch="Uniform"/>
                </Border>
              
                <StackPanel Spacing="16">
                    <TextBlock 
                        TextWrapping="Wrap"
                        FontSize="15"
                        TextAlignment="Center"
                        LineHeight="24"
                        Foreground="{ThemeResource TextFillColorPrimaryBrush}">
                        Personalize CoreTray to match your preferences.
                    </TextBlock>
                    
                    <StackPanel Spacing="12" Margin="0,8,0,0">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE916;" FontSize="16" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                            <TextBlock Text="Adjustable update intervals for performance" 
                                     TextWrapping="Wrap"
                                     VerticalAlignment="Center"
                                     FontSize="14"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE9F9;" FontSize="16" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                            <TextBlock Text="Temperature units (Celsius, Fahrenheit, Kelvin)" 
                                     TextWrapping="Wrap"
                                     VerticalAlignment="Center"
                                     FontSize="14"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE768;" FontSize="16" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                            <TextBlock Text="System tray integration for background monitoring" 
                                     TextWrapping="Wrap"
                                     VerticalAlignment="Center"
                                     FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <Border Background="{ThemeResource AccentFillColorDisabledBrush}"
                            CornerRadius="8"
                            Padding="16,12"
                            Margin="0,8,0,0">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE946;" FontSize="16" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                            <TextBlock 
                                TextWrapping="Wrap"
                                FontSize="13"
                                VerticalAlignment="Center"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                You can change all settings anytime from the Settings page
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</ContentDialog>
