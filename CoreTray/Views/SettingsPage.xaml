                            ">
                        </toolkit:SettingsCard>
                        <toolkit:SettingsCard Header="LICENSE DETAILS">
                            <HyperlinkButton Content="View LICENSE" NavigateUri="https://choosealicense.com/licenses/mit/" />
                        </toolkit:SettingsCard>
                    </toolkit:SettingsExpander.Items>
                </toolkit:SettingsExpander>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
