<Page
    x:Class="CoreTray.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:CoreTray.Helpers"
    xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
    xmlns:xaml="using:Microsoft.UI.Xaml"
    mc:Ignorable="d">
    
    <Page.Resources>
        <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
        <helpers:TemperatureUnitToBooleanConverter x:Key="TemperatureUnitToBooleanConverter" />
        
        <!-- Card Spacing -->
        <x:Double x:Key="SettingsCardSpacing">4</x:Double>
        
        <!-- Style -->
        <Style
            x:Key="SettingsSectionHeaderTextBlockStyle"
            BasedOn="{StaticResource BodyStrongTextBlockStyle}"
            TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="Margin" Value="1,30,0,6" />
            </Style.Setters>
        </Style>
    </Page.Resources>
    
    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ScrollViewer
            Grid.Row="1"
            Padding="0,0,0,0"
            VerticalScrollBarVisibility="Hidden"
            VerticalScrollMode="Auto">
            <StackPanel Spacing="{StaticResource SettingsCardSpacing}">
                <StackPanel.ChildrenTransitions>
                    <RepositionThemeTransition />
                </StackPanel.ChildrenTransitions>

                <!--  Personalization  -->
                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="Personalization" />

                <toolkit:SettingsCard Header="App Theme" Description="Select which app theme to display">
                    <toolkit:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xE790;" />
                    </toolkit:SettingsCard.HeaderIcon>
                    <ComboBox SelectedIndex="{x:Bind ViewModel.ThemeIndex, Mode=TwoWay}" MinWidth="150">
                        <ComboBoxItem Content="Light" Tag="Light" />
                        <ComboBoxItem Content="Dark" Tag="Dark" />
                        <ComboBoxItem Content="Use system setting" Tag="Default" />
                    </ComboBox>
                </toolkit:SettingsCard>

                <!--  Monitoring Settings  -->
                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="Monitoring" />
                
                <toolkit:SettingsExpander Description="Configure how often sensors are polled" Header="Update Interval">
                    <toolkit:SettingsExpander.HeaderIcon>
                        <FontIcon Glyph="&#xE916;" />
                    </toolkit:SettingsExpander.HeaderIcon>
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <TextBlock 
                            Text="{x:Bind ViewModel.UpdateInterval, Mode=OneWay}" 
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock 
                            Text="ms" 
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                    <toolkit:SettingsExpander.Items>
                        <toolkit:SettingsCard ContentAlignment="Left">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider 
                                    Grid.Column="0"
                                    Minimum="100" 
                                    Maximum="5000" 
                                    StepFrequency="100"
                                    TickFrequency="500"
                                    TickPlacement="BottomRight"
                                    Value="{x:Bind ViewModel.UpdateInterval, Mode=TwoWay}"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,0,12,0"/>
                                <TextBlock 
                                    Grid.Column="1"
                                    Text="ms" 
                                    VerticalAlignment="Center"/>
                            </Grid>
                        </toolkit:SettingsCard>
                    </toolkit:SettingsExpander.Items>
                </toolkit:SettingsExpander>

                <toolkit:SettingsCard Header="Auto-start Monitoring" Description="Begin monitoring when app launches">
                    <toolkit:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xE7E8;" />
                    </toolkit:SettingsCard.HeaderIcon>
                    <ToggleSwitch IsOn="{x:Bind ViewModel.AutoStartMonitoring, Mode=TwoWay}"/>
                </toolkit:SettingsCard>

                <toolkit:SettingsCard Header="Pause/Resume Monitoring" Description="Temporarily pause data collection">
                    <toolkit:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xE769;" />
                    </toolkit:SettingsCard.HeaderIcon>
                    <ToggleSwitch IsOn="{x:Bind ViewModel.IsMonitoringActive, Mode=TwoWay}" OffContent="Paused" OnContent="Running"/>
                </toolkit:SettingsCard>

                <toolkit:SettingsExpander Description="Number of data points to display in charts" Header="Maximum Chart Data Points">
                    <toolkit:SettingsExpander.HeaderIcon>
                        <FontIcon Glyph="&#xE9D2;" />
                    </toolkit:SettingsExpander.HeaderIcon>
                    <TextBlock 
                        Text="{x:Bind ViewModel.MaxDataPoints, Mode=OneWay}" 
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <toolkit:SettingsExpander.Items>
                        <toolkit:SettingsCard ContentAlignment="Left">
                            <Slider 
                                Minimum="50" 
                                Maximum="500" 
                                StepFrequency="10"
                                TickFrequency="50"
                                TickPlacement="BottomRight"
                                Value="{x:Bind ViewModel.MaxDataPoints, Mode=TwoWay}"
                                HorizontalAlignment="Stretch"/>
                        </toolkit:SettingsCard>
                    </toolkit:SettingsExpander.Items>
                </toolkit:SettingsExpander>

                <!--  Display Settings  -->
                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="Display" />

                <toolkit:SettingsCard Header="Temperature Unit" Description="Select your preferred temperature scale">
                    <toolkit:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xE9CA;" />
                    </toolkit:SettingsCard.HeaderIcon>
                    <ComboBox SelectedIndex="{x:Bind ViewModel.TemperatureUnitIndex, Mode=TwoWay}" MinWidth="150">
                        <ComboBoxItem Content="Celsius (°C)" />
                        <ComboBoxItem Content="Fahrenheit (°F)" />
                        <ComboBoxItem Content="Kelvin (K)" />
                    </ComboBox>
                </toolkit:SettingsCard>

                <toolkit:SettingsCard Header="Decimal Precision" Description="Number of decimal places to display. Useful for RAM usage (%).">
                    <toolkit:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xE8EF;" />
                    </toolkit:SettingsCard.HeaderIcon>
                    <ComboBox SelectedIndex="{x:Bind ViewModel.DecimalPrecision, Mode=TwoWay}" MinWidth="150">
                        <ComboBoxItem Content="0 (00°C)" />
                        <ComboBoxItem Content="1 (0.0°C)" />
                        <ComboBoxItem Content="2 (00.00°C)" />
                    </ComboBox>
                </toolkit:SettingsCard>

                <!--  Chart Settings  -->
                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="Charts" />

                <toolkit:SettingsCard Header="Reset All Graphs" Description="Clear all historical data from charts">
                    <toolkit:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xED62;" />
                    </toolkit:SettingsCard.HeaderIcon>
                    <Button 
                        Content="Clear Graph Data"
                        Command="{x:Bind ViewModel.ResetAllGraphsCommand}"/>
                </toolkit:SettingsCard>

                <toolkit:SettingsExpander Description="Apply smoothing to chart lines" Header="Line Smoothing">
                    <toolkit:SettingsExpander.HeaderIcon>
                        <FontIcon Glyph="&#xE76F;" />
                    </toolkit:SettingsExpander.HeaderIcon>
                    <ToggleSwitch IsOn="{x:Bind ViewModel.EnableChartSmoothing, Mode=TwoWay}"/>
                    <toolkit:SettingsExpander.Items>
                        <toolkit:SettingsCard 
                            Header="Chart Smoothness"
                            Description="Controls how smooth the chart lines appear"
                            IsEnabled="{x:Bind ViewModel.EnableChartSmoothing, Mode=OneWay}">
                            <toolkit:SettingsCard.HeaderIcon>
                                <FontIcon Glyph="&#xF128;" />
                            </toolkit:SettingsCard.HeaderIcon>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider 
                                    Grid.Column="0"
                                    Minimum="0" 
                                    Maximum="1" 
                                    StepFrequency="0.5"
                                    TickFrequency="0.5"
                                    TickPlacement="BottomRight"
                                    Value="{x:Bind ViewModel.ChartSmoothness, Mode=TwoWay}"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,0,12,0"
                                    IsEnabled="{x:Bind ViewModel.EnableChartSmoothing, Mode=OneWay}"/>
                                <TextBlock 
                                    Grid.Column="1"
                                    Text="{x:Bind ViewModel.ChartSmoothness, Mode=OneWay}" 
                                    VerticalAlignment="Center"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </Grid>
                        </toolkit:SettingsCard>
                    </toolkit:SettingsExpander.Items>
                </toolkit:SettingsExpander>

                <!--  Advanced Settings  -->
                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="Advanced" />

                <toolkit:SettingsCard Header="System Tray Icon" Description="Show CPU temperature in the system tray">
                    <toolkit:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xE91C;" />
                    </toolkit:SettingsCard.HeaderIcon>
                    <ToggleSwitch IsOn="{x:Bind ViewModel.EnableSystemTray, Mode=TwoWay}"/>
                </toolkit:SettingsCard>

                <toolkit:SettingsCard Header="Debug Logging" Description="Opens a live PowerShell console showing real-time application logs with timestamps">
                    <toolkit:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xE756;" />
                    </toolkit:SettingsCard.HeaderIcon>
                    <ToggleSwitch IsOn="{x:Bind ViewModel.EnableDebugLogging, Mode=TwoWay}"/>
                </toolkit:SettingsCard>

                <toolkit:SettingsCard Header="Reset Settings" Description="Restore all settings to default values">
                    <toolkit:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xE777;" />
                    </toolkit:SettingsCard.HeaderIcon>
                    <Button 
                        Content="Reset to Defaults"
                        Command="{x:Bind ViewModel.ResetSettingsCommand}"/>
                </toolkit:SettingsCard>

                <!--  About  -->
                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="About" />

                <toolkit:SettingsExpander
                    Margin="0,0,0,36"
                    Description="© 2025 Kalmix. Licensed under the MIT License."
                    Header="CoreTray">
                    <toolkit:SettingsExpander.HeaderIcon>
                        <BitmapIcon ShowAsMonochrome="False" UriSource="/Assets/BadgeLogo.scale-400.png" />
                    </toolkit:SettingsExpander.HeaderIcon>
                    <TextBlock
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        IsTextSelectionEnabled="True"
                        Text="{x:Bind ViewModel.VersionDescription, Mode=OneWay}" />
                    <toolkit:SettingsExpander.Items>
                        <toolkit:SettingsCard
                                x:Name="toCloneRepoCard"
                                Click="toCloneRepoCard_Click"
                                Header="To clone this repository"
                                IsClickEnabled="True">
                            <TextBlock
                                    x:Name="gitCloneTextBlock"
                                    FontFamily="Consolas"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    IsTextSelectionEnabled="True"
                                    Text="git clone https://github.com/kalmix/CoreTray" />
                            <toolkit:SettingsCard.ActionIcon>
                                <FontIcon Glyph="&#xE8C8;" />
                            </toolkit:SettingsCard.ActionIcon>
                        </toolkit:SettingsCard>
                        <toolkit:SettingsCard
                                x:Name="bugRequestCard"
                                Click="bugRequestCard_Click"
                                Header="File a bug or request new feature"
                                IsClickEnabled="True">
                            <toolkit:SettingsCard.ActionIcon>
                                <FontIcon Glyph="&#xE8A7;" />
                            </toolkit:SettingsCard.ActionIcon>
                        </toolkit:SettingsCard>
                        <toolkit:SettingsCard
                                HorizontalContentAlignment="Left"
                                ContentAlignment="Vertical"
                                Header="Dependencies &amp; references">
                            <StackPanel Margin="-12,0,0,0" Orientation="Vertical">
                                <HyperlinkButton Content="WinUI 3" NavigateUri="https://aka.ms/winui" />
                                <HyperlinkButton Content="Windows Community Toolkit" NavigateUri="https://aka.ms/toolkit/windows" />
                                <HyperlinkButton Content="LibreHardwareMonitorLib" NavigateUri="https://github.com/LibreHardwareMonitor/LibreHardwareMonitor/tree/master/LibreHardwareMonitorLib" />
                                <HyperlinkButton Content="LiveCharts2" NavigateUri="https://livecharts.dev/api/2.0.0-rc6.1/index" />
                            </StackPanel>
                        </toolkit:SettingsCard>
                        <!-- Bruh I literally doxxed myself LOL -->
                        <toolkit:SettingsCard
                            HorizontalContentAlignment="Left"
                            ContentAlignment="Vertical"
                            Header="© Copyright 2025 Jasiel C. Cabrera (a.k.a «Kalmix»)&#x0a;&#x0a;Permission is hereby granted, free of charge, to any person obtaining a copy of this software and associated documentation files (the “Software”), to deal in the Software without restriction, including without limitation the rights to use, copy, modify, merge, publish, distribute, sublicense, and/or sell copies of the Software, and to permit persons to whom the Software is furnished to do so, subject to the following conditions:&#x0a;&#x0a;The above copyright notice and this permission notice shall be included in all copies or substantial portions of the Software.
